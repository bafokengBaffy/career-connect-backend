{
  "name": "career-connect-backend",
  "version": "2.0.0",
  "description": "Career Connect Lesotho - Enterprise Grade Backend API with Comprehensive Security",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "dev:debug": "cross-env NODE_ENV=development nodemon --inspect server.js",
    "dev:win": "set NODE_ENV=development && nodemon server.js",
    "prod": "cross-env NODE_ENV=production node server.js",
    "prod:cluster": "cross-env NODE_ENV=production node cluster.js",
    "test": "jest",
    "test:arcjet": "node test-arcjet.js",
    "test:security:arcjet": "jest tests/security/arcjet.test.js --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:unit": "jest tests/unit --verbose",
    "test:integration": "jest tests/integration --runInBand --verbose",
    "test:security": "jest tests/security --runInBand --verbose",
    "test:performance": "jest tests/performance --verbose",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:security",
    "test:ci": "jest --runInBand --coverage --maxWorkers=2",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:security:auth": "jest tests/security/authentication.test.js --verbose",
    "test:security:authz": "jest tests/security/authorization.test.js --verbose",
    "test:security:xss": "jest tests/security/xssProtection.test.js --verbose",
    "test:security:injection": "jest tests/security/injection.test.js --verbose",
    "test:security:headers": "jest tests/security/securityHeaders.test.js --verbose",
    "test:security:rate-limit": "jest tests/security/rateLimiting.test.js --verbose",
    "test:models:user": "jest tests/unit/models/user.model.test.js --verbose",
    "test:models:company": "jest tests/unit/models/company.model.test.js --verbose",
    "test:models:admin": "jest tests/unit/models/admin.model.test.js --verbose",
    "test:controllers:user": "jest tests/unit/controllers/user.controller.test.js --verbose",
    "test:controllers:auth": "jest tests/unit/controllers/auth.controller.test.js --verbose",
    "test:controllers:company": "jest tests/unit/controllers/company.controller.test.js --verbose",
    "test:controllers:admin": "jest tests/unit/controllers/admin.controller.test.js --verbose",
    "test:middleware:auth": "jest tests/unit/middleware/auth.middleware.test.js --verbose",
    "test:middleware:security": "jest tests/unit/middleware/security.middleware.test.js --verbose",
    "test:middleware:validation": "jest tests/unit/middleware/validation.middleware.test.js --verbose",
    "test:routes:auth": "jest tests/integration/auth.routes.test.js --verbose",
    "test:routes:user": "jest tests/integration/user.routes.test.js --verbose",
    "test:routes:company": "jest tests/integration/company.routes.test.js --verbose",
    "test:routes:admin": "jest tests/integration/admin.routes.test.js --verbose",
    "test:upload": "node verify-upload.js",
    "test:cloudinary": "node test-cloudinary-setup.js",
    "test:server": "node test-server-upload.js",
    "test:full": "node test-full-upload-flow.js",
    "test:load": "node test-upload-load.js",
    "test:routes": "curl -s http://localhost:5001/api/debug/server-status | jq '.routes'",
    "security:audit": "npm audit --production --audit-level=high || true",
    "security:audit:fix": "npm audit fix",
    "security:scan": "node scripts/security-audit.js",
    "security:headers": "curl -I https://career-connect-backend-gp8u.onrender.com",
    "check:env": "node check-env.js",
    "check:health": "curl -s http://localhost:5001/health | jq",
    "check:ready": "curl -s http://localhost:5001/ready | jq",
    "check:live": "curl -s http://localhost:5001/live | jq",
    "db:init": "node scripts/init-database.js",
    "db:backup": "node scripts/backup-database.js",
    "db:restore": "node scripts/restore-database.js",
    "db:migrate": "node scripts/migrate.js",
    "logs:tail": "tail -f logs/combined.log",
    "logs:errors": "tail -f logs/error.log",
    "setup:prod": "npm ci --only=production",
    "setup:dev": "npm install",
    "setup:env": "echo 'Copy .env.example to .env and configure your environment variables'",
    "postinstall": "npm run check:env",
    "prestart": "npm run security:audit",
    "predev": "npm run check:env",
    "docker:build": "docker build -t career-connect-backend .",
    "docker:run": "docker run -p 5001:5001 career-connect-backend",
    "docker:push": "docker push career-connect-backend",
    "deploy:render": "git push render main",
    "deploy:heroku": "git push heroku main",
    "deploy:aws": "eb deploy",
    "monitor:status": "pm2 status",
    "monitor:logs": "pm2 logs",
    "monitor:restart": "pm2 restart all",
    "clean": "rimraf node_modules package-lock.json",
    "clean:logs": "rimraf logs/*.log",
    "clean:uploads": "rimraf uploads/*",
    "clean:tests": "rimraf coverage .nyc_output",
    "clean:all": "npm run clean && npm run clean:logs && npm run clean:uploads && npm run clean:tests",
    "pretest": "npm run check:env",
    "posttest": "npm run security:audit"
  },
  "keywords": [
    "career",
    "education",
    "lesotho",
    "api",
    "upload",
    "cloudinary",
    "firebase",
    "enterprise",
    "security",
    "production"
  ],
  "author": "Career Connect Lesotho Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@arcjet/inspect": "1.1.0",
    "@arcjet/node": "1.1.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.5.1",
    "compression": "^1.7.5",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.4.1",
    "express-session": "^1.18.1",
    "express-slow-down": "^2.0.3",
    "express-validator": "^7.2.0",
    "firebase-admin": "13.6.1",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "9.2.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "node-cache": "5.1.2",
    "nodemailer": "^6.9.16",
    "redis": "^4.7.0",
    "uuid": "^11.0.5",
    "winston": "^3.17.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/jest": "29.5.14",
    "axios": "^1.7.9",
    "cross-env": "^7.0.3",
    "form-data": "^4.0.1",
    "jest": "^29.7.0",
    "jest-junit": "16.0.0",
    "mongodb-memory-server": "9.5.0",
    "node-mocks-http": "1.17.2",
    "nodemon": "^3.1.9",
    "pm2": "^5.4.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup/jest.setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/tests/fixtures/",
      "/tests/mocks/",
      "/tests/setup/"
    ],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "models/**/*.js",
      "middleware/**/*.js",
      "utils/**/*.js",
      "config/**/*.js",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/coverage/**",
      "!**/logs/**",
      "!**/uploads/**",
      "!server.js",
      "!cluster.js",
      "!test-*.js",
      "!verify-*.js",
      "!debug-*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "/coverage/",
      "/logs/",
      "/uploads/",
      "/scripts/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "verbose": true,
    "testTimeout": 30000,
    "maxWorkers": "50%",
    "moduleDirectories": [
      "node_modules",
      "<rootDir>"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "coverage",
          "outputName": "junit.xml"
        }
      ]
    ]
  },
  "jest-junit": {
    "outputDirectory": "coverage",
    "outputName": "junit.xml",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": true
  },
  "nodemonConfig": {
    "watch": [
      "server.js",
      "config/",
      "controllers/",
      "middleware/",
      "models/",
      "routes/",
      "utils/"
    ],
    "ignore": [
      "tests/",
      "logs/*",
      "uploads/*"
    ],
    "ext": "js,json",
    "delay": "1000"
  },
  "pm2": {
    "name": "career-connect",
    "script": "server.js",
    "instances": "max",
    "exec_mode": "cluster",
    "watch": false,
    "max_memory_restart": "1G",
    "env": {
      "NODE_ENV": "production"
    }
  }
}
